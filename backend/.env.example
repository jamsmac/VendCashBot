# VendCash Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000
TZ=Asia/Tashkent

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=vendcash
DB_PASSWORD=your_secure_password_here
DB_DATABASE=vendcash

# ============================================
# REDIS (for caching and sessions)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300

# ============================================
# JWT Authentication
# ============================================
# CRITICAL: Change this in production!
JWT_SECRET=your_very_long_and_secure_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# ============================================
# TELEGRAM BOT
# ============================================
# Get from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Optional: Default welcome image URL
TELEGRAM_WELCOME_IMAGE=

# ============================================
# ADMIN USER
# ============================================
# Your Telegram user ID (get from @userinfobot)
ADMIN_TELEGRAM_ID=123456789
ADMIN_NAME=Администратор

# ============================================
# FRONTEND
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# APPLICATION SETTINGS (Optional)
# ============================================
# Maximum collection amount (default: 1,000,000,000)
MAX_COLLECTION_AMOUNT=1000000000
# Invite expiration time in hours (default: 24)
INVITE_EXPIRATION_HOURS=24
# Duplicate collection check window in minutes (default: 30)
DUPLICATE_CHECK_MINUTES=30

# ============================================
# ERROR MONITORING (Sentry)
# ============================================
# Optional: Leave empty to disable Sentry
SENTRY_DSN=
# Optional: App version for release tracking
APP_VERSION=vendcash@1.0.0
