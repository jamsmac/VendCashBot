# ===========================================
# VendCash Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=vendcash
DB_PASSWORD=your_secure_password_here
DB_DATABASE=vendcash

# JWT Secret - generate a random string (min 32 chars)
# You can use: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_at_least_32_characters_long

# Telegram Bot Configuration
# Get from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_USERNAME=YourBotUsername

# Admin Configuration
# Your Telegram user ID - get from @userinfobot
ADMIN_TELEGRAM_ID=your_telegram_id

# Frontend URLs
FRONTEND_URL=https://your-domain.com
VITE_API_URL=https://your-domain.com/api
VITE_TELEGRAM_BOT_USERNAME=YourBotUsername

# Optional: VHM24 API Integration
# VHM24_API_URL=https://api.vhm24.com
# VHM24_API_KEY=your_vhm24_api_key
